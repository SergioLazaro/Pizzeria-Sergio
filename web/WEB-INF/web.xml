<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Servlets.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteCookie</servlet-name>
        <servlet-class>Servlets.deleteCookie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>catalogue</servlet-name>
        <servlet-class>Servlets.catalogue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>populateSelector</servlet-name>
        <servlet-class>Servlets.populateSelector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>startOrder</servlet-name>
        <servlet-class>Servlets.startOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>orders</servlet-name>
        <servlet-class>Servlets.orders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modification</servlet-name>
        <servlet-class>Servlets.modification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modifications</servlet-name>
        <servlet-class>Servlets.modifications</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userOrders</servlet-name>
        <servlet-class>Servlets.userOrders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cancelOrder</servlet-name>
        <servlet-class>Servlets.cancelOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteCookie</servlet-name>
        <url-pattern>/deleteCookie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>catalogue</servlet-name>
        <url-pattern>/catalogue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>populateSelector</servlet-name>
        <url-pattern>/populateSelector</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>startOrder</servlet-name>
        <url-pattern>/startOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>orders</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modification</servlet-name>
        <url-pattern>/modification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modifications</servlet-name>
        <url-pattern>/modifications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userOrders</servlet-name>
        <url-pattern>/userOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cancelOrder</servlet-name>
        <url-pattern>/cancelOrder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
